<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.8*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Margin="75,25,75,25" Content="Generate" Name="Generate" Click="Generate_Click"></Button>

        <TextBox Grid.Row="1" Grid.Column="0" Margin="50,55,50,240" Text="5" Name="low"/>
        <TextBox Grid.Row="1" Grid.Column="0" Margin="50,100,50,195" Text="5" Name="big"/>
        <TextBox Grid.Row="1" Grid.Column="0" Margin="50,145,50,150" Text="5" Name="num" />
        <TextBox Grid.Row="1" Grid.Column="0" Margin="50,10,50,285" Text="5" Name="spe"/>

        <TextBox Grid.Row="1" Grid.Column="1" Margin="50,10,50,285" Text="Password" Name="pwfield"/>

    </Grid>
</Window>
